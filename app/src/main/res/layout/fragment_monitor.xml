<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="心电模式"
            android:background="@android:color/holo_red_light"
            android:id="@+id/ecg_btn"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="体温模式"
            android:background="@android:color/darker_gray"
            android:id="@+id/temp_btn"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/pulse_layout"
        android:layout_margin="10dp"
        >
        <com.smart.HealthAssistant.view.ECGView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/ecg_view"
            />
        <com.smart.HealthAssistant.view.TempView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/temp_view"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temp_tv"
            android:text="体温：36.1C"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ecg_tv"
            android:text="脉搏：84次/分"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/posture_tv"
            android:text="姿态：平躺"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            />
    </LinearLayout>
</LinearLayout>
